@model List<AdViewModel>

@{
    ViewData["Title"] = "İlanlar";
}

<h4>İlanlar</h4>


<table class="table table-bordered table-striped">
    <thead>
        <tr style="background-color:darkgray">
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().TitleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().PublicationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @item.Price.ToString("n0") TL
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublicationDate)
            </td>
            <td>
                <a class="text-primary" asp-action="Edit" asp-route-id="@item.TitleId">güncelle</a> /
                <a class="text-primary" asp-action="Delete" asp-route-id="@item.TitleId">sil</a> 
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">İlan Ekle</a>
</p>
