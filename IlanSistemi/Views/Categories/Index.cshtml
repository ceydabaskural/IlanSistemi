@model List<Category>

@{
    ViewData["Title"] = "Kategoriler";
}


<table class="table table-striped table-bordered">
    <thead>
        <tr style="background-color:darkgray">
            <th >
                @Html.DisplayNameFor(model => model.FirstOrDefault().CategoryName)
            </th>
            <th>
               Küçük Resim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr><td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <img src="#" class="img-thumbnail"/>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>
                <td>
                    <a class="text-primary " asp-action="Edit" asp-route-categoryid="@item.CategoryId">güncelle</a> /
                    <a class="text-primary" asp-action="Delete" asp-route-categoryid="@item.CategoryId">sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create">Kategori Ekle</a>
</p>